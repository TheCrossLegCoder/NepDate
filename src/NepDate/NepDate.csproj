<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>NepDate</Title>
    <Authors>TheCrossLegCoder</Authors>
    <Description>Super-fast and memory-efficient Nepali Date struct with powerful features that closely resembles the DateOnly struct in .NET</Description>
    <PackageReadmeFile></PackageReadmeFile>
    <RepositoryUrl>https://github.com/TheCrossLegCoder/NepDate</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Nepali-Date-Converter;Nepali-Date;Nepali-Calendar;NepDate;Date-Converter;Patro;Hamro-Patro;Nepali-Patro;Nepal</PackageTags>
    <PackageProjectUrl>https://github.com/TheCrossLegCoder/NepDate</PackageProjectUrl>
    <PackageIcon>nuget-icon.png</PackageIcon>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Assets\nuget-icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
